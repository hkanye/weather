{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "lerna": "^7.1.4"
  },
  "scripts": {
    "install:pc": "cd packages/pc && npm install",
    "install:server": "cd packages/server && npm install",
    "install:shared": "cd packages/shared && npm install",
    "setup": "npx concurrently \"npm run install:pc\" \"npm run install:server\" \"npm run install:shared\" \"npm install\"",
    "start:pc": "cd packages/pc && npm start",
    "start:server": "cd packages/server/lib && node server.js",
    "start": "npx concurrently \"npm run start:pc\" \"npm run start:server\""
  }
}
